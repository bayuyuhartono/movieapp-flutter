default_platform(:android)

platform :android do

  desc "Deploy apk release to Firebase App Distribution"
  lane :deploy_firebase do
    sh("flutter build apk --release")
    firebase_app_distribution(
      app: ENV["FIREBASE_APP_ID"],
      apk_path: "../build/app/outputs/apk/release/app-release.apk",
      service_credentials_file: "fastlane/firebase_service_account.json",
      groups: "QA",
      release_notes: "New build with bug fixes ðŸš€",
    )
  end

  desc "Deploy internal test to Play Store"
  lane :deploy_internal do
    sh("flutter build appbundle --release")
    upload_to_play_store(
      track: "internal",
      aab: "../build/app/outputs/bundle/release/app-release.aab",
      json_key: "fastlane/google_play_api.json",
      version_name: "MovieAddict",
      release_status: "draft",
    )
  end
end
